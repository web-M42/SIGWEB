{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "lib" : ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/index.tsx"],
  "exclude": ["node_modules"]
}
